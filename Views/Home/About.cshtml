@{
    ViewBag.Title = "About";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>


    <style>
        * {
            margin: 0%;
            padding: 0%;
            box-sizing: border-box;
            text-transform: upper;
        }

        #about {
            display: flex;
        }

        .about {
            display: flex;
            width: 33.33%;
            flex-direction: column;
            border: 1px solid grey;
            margin: 1rem;
            padding: 1rem;
            border-radius: 1rem;
            background-color: grey;
        }

        #aboutus {
            font-family: "Baloo Bhai 2", sans serif;
            font-family: "Saira Stencil One", cursive;
            text-align: center;
            text-transform: uppercase;
            border-bottom: 1px solid;
        }

        h2 {
            text-align: center;
            color: honeydew;
        }


        img {
            margin: 0px;
            width: 100%;
            border-radius: 2rem;
            text-align: center;
        }

        .spiderman {
            background-color: #fec41f;
            background-image: url("https://uswalldecor.com/cdn/shop/products/DY0269-disney-kids-3-marvel-avengers-comic-book-wallpaper-york-wallcoverings-silver-white_97569c49-ca57-4f28-a3e9-31ba631c7fe9.jpg?v=1571709002&width=1946");
        }

        .superman {
            background-color: #cf383b;
            background-image: url("https://uswalldecor.com/cdn/shop/products/DY0269-disney-kids-3-marvel-avengers-comic-book-wallpaper-york-wallcoverings-silver-white_97569c49-ca57-4f28-a3e9-31ba631c7fe9.jpg?v=1571709002&width=1946");
        }

        .wonderwomen {
            background-color: #0991bb;
            background-image: url("https://uswalldecor.com/cdn/shop/products/DY0269-disney-kids-3-marvel-avengers-comic-book-wallpaper-york-wallcoverings-silver-white_97569c49-ca57-4f28-a3e9-31ba631c7fe9.jpg?v=1571709002&width=1946");
        }

        h1 {
            font-size: 4rem;
        }

        .aboutus {
            display: flex;
            flex-direction: column;
            width: 100%;
            padding: 2rem;
        }

        .heading {
            font-family: "Baloo Bhai 2", cursive;
            margin: 0.5rem;
            font-size: 2rem;
            display: flex;
            width: 100%;
        }

        p {
            margin: 0.5rem;
            font-size: 1.5rem;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        #card {
            display: flex;
        }



        .about {
            display: flex;
            width: 100%;
            flex-direction: column;
            border-top: 1px solid grey;
            padding-top: 2rem;
        }

        p {
            border: 1px;
            position: relative;
            z-index: 1;
            color: honeydew;
        }

        .box {
            padding: 4rem;
            position: static;
            top: 0;
            left: 0;
            width: 100%;
            height: 60%;
            background-color: rgba(0, 0, 0, 0.5);
            margin-top: 10px;
        }

        }

    </style>
